[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = true
enable-click = true
enable-scroll = true
reverse-scroll = false

format = <label-state>


ws-icon-0 = 1;%{F#D8DEE9}  
ws-icon-1 = 2;%{F#BF616A}   
ws-icon-2 = 3;%{F#EBCB8B}    
ws-icon-3 = 4;%{F#81A1C1}
ws-icon-4 = 5;%{F#A3BE8C} 




label-separator = " "


label-focused =  %icon%  %name%
label-focused-foreground = ${colors.background}
label-focused-background =${colors.active-light}
label-focused-padding = 1


label-occupied = %icon%  %name% 
label-occupied-foreground =#ffffff
label-occupied-background =${colors.dark-light}

label-occupied-padding = 1

label-empty = %icon%
label-empty-foreground =#ffffff
label-empty-padding = 1

label-urgent = %icon%
xxlabel-urgent-foreground = #88C0D0
label-urgent-padding = 1

[bar/example]

tray-position = right
monitor = eDP1
width =  100%
height = 18
padding-left =1
padding-right =1

background = ${colors.background}
foreground = ${colors.foreground}
bottom = false

border-top-size = 6
border-bottom-size = 6
border-top-color = ${colors.background}
border-bottom-color = ${colors.background}

line-size = 0
wm-restack = bspwm

modules-left = bspwm 
modules-center =  alsa  
modules-right =  cpu updates wlan mem xbacklight time powermenu

font-0 = JetBrainsMono Nerd Font:style=Bold:pixelsize=9;2
font-1 = Material Design Icons:style=Regular:size=9;2
font-2 = unifont:fontformat=truetype:size=9:antialias=true;
[module/alsa]

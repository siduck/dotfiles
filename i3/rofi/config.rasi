
configuration {
    drun-display-format: "{icon}";
    display-drun: "Apps";
  show-icons: true;
  icon-theme: "Oranchelo";
  location: 0;
  yoffset: 0;
    xoffset: 0;
  fake-transparency: false;
  hide-scrollbar: true;
  bw: 0;
    fullscreen: false;
    show-icons: true;
  terminal: "xst";
  sidebar-mode: false;
}

// black version
* {
  bg:  #282A36;
  fg:  #ffffff;
  ac: #282A36;
  txt: #ffffff;
}

